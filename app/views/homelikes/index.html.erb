<p id="notice"><%= notice %></p>

<h1>Homes</h1>


<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Address</th>
      <th>Room number</th>
      <th>Price</th>
      <th>user</th>
      <th>detail</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
  <% current_user.homelikes.each do |homelike| %>
    <% @homes.each do |home| %>
      <% if homelike.home_id == home.id%>
        <tr>
          <td><%= home.name %></td>
          <td><%= home.address %></td>
          <td><%= home.room_number %></td>
          <td><%= home.price %></td>
          <td><%= home.user.name %></td>
          <td><%= home.detail%></td>
          <td><%= link_to 'Show', home , class: 'btn btn-primary'%></td>
          <td><%= link_to 'Destroy', homelike, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %></td>
        </tr>
      <% end %>
    <% end %>
  <%end%>
  </tbody>
</table>

<br>
